@using Exercise_MVC.Models
@model Product

<div class="flex flex-wrap -mx-3">
    <div class="flex-none w-3/6 max-w-full px-3 ">
        <div class="relative flex flex-col min-w-0 dark:bg-indigo-200 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-xl dark:bg-slate-850 dark:shadow-dark-xl rounded-2xl bg-clip-border">
            <div class="p-6 pb-0 mb-0 border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                <h6 class="dark:text-indigo-600 font-bold text-2xl">Add Products</h6>
            </div>
            <div class="flex-auto px-0 pt-0 pb-2">
                <div class="p-0 overflow-x-auto ">
                    <form class="m-4" asp-action="Add" asp-controller="Product" method="post">
                        <div class="space-y-12">
                            <div pb-12">
                                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                                    <input type="hidden" asp-for="ProductId" />
                                    <div class="sm:col-span-3">
                                        <label asp-for="ProductName" class="block text-lg font-medium">Product name</label>
                                        <div class="mt-2">
                                            <input asp-for="ProductName" type="text" class="w-full rounded-md bg-white/2 px-3 py-1.5 dark:border-solid dark:border-red placeholder:text-gray-500 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-500 sm:text-sm" />
                                            <span asp-validation-for="ProductName" class="text-sm text-red-600 font-bold"></span>
                                        </div>
                                    </div>

                                    <div class="sm:col-span-3">
                                        <label asp-for="ProductRate" class="block text-lg font-medium">Product Rate</label>
                                        <div class="mt-2">
                                            <input asp-for="ProductRate" type="number" class="w-full rounded-md bg-white/2 px-3 py-1.5 dark:border-solid dark:border-red placeholder:text-gray-500 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-500 sm:text-sm" />
                                            <span asp-validation-for="ProductRate" class="text-sm text-red-600 font-bold"></span>
                                        </div>
                                    </div>

                                    
                                </div>
                            </div>
                        </div>

                        <div class="mt-6 flex items-center justify-end gap-x-6">
                            <a asp-controller="Product" asp-action="Index" type="button" class="rounded-md text-sm bg-indigo-100 px-3 py-2 font-semibold text-black">Cancel</a>
                            <button type="submit" class="rounded-md bg-indigo-500 px-3 py-2 text-sm font-semibold text-white focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">Save</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>